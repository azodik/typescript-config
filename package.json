    "prebuild": "pnpm clean",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "version": "changeset version",
    "publish:changeset": "changeset publish",
    "publish:npm": "npm publish --access public"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6"
