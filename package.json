{
  "name": "@azodik/typescript-config",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azodik/typescript-config.git"
  },
  "description": "Shared Typescript configuration for Azodik",
  "keywords": [
    "typescript",
    "typescript-config",
    "nextjs",
    "react-library"
  ],
  "author": "Azodik",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
